<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="32dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <com.spacedelivery.utils.TextView
            android:id="@+id/tvUGS"
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="UGS : 50000"
            android:textColor="#000" />

        <com.spacedelivery.utils.TextView
            android:id="@+id/tvEUS"
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="UGS : 50000"
            android:textColor="#000" />

        <com.spacedelivery.utils.TextView
            android:id="@+id/tvDS"
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="UGS : 50000"
            android:textColor="#000" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_soft" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.spacedelivery.utils.TextView
            android:id="@+id/spaceName"
            style="@style/TextLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            tools:text="DenizX" />

        <com.spacedelivery.utils.TextView
            android:id="@+id/spaceDamage"
            style="@style/TextLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            tools:text="100" />

        <com.spacedelivery.utils.TextView
            android:id="@+id/spaceTime"
            style="@style/TextLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            tools:text="49s" />

    </LinearLayout>

    <com.spacedelivery.utils.EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Search by name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlanet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.spacedelivery.utils.TextView
        android:id="@+id/tvTravelPlanet"
        style="@style/TextLarge.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        tools:text="49s" />
</LinearLayout>